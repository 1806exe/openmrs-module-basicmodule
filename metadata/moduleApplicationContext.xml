<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="basicmoduleUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	           <prop key="module/@MODULE_ID@/basicmodule.form">basicmoduleFormController</prop>
	    	</props>
		</property>
    </bean>
	
    <!-- Controllers -->
	
    <bean id="basicmoduleFormController" class="@MODULE_PACKAGE@.web.controller.BasicModuleFormController">
		<property name="commandName"><value>basicmoduleForm</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/basicmoduleForm</value></property>
		<property name="successView"><value>basicmodule.form</value></property>
    </bean>
	
    <!-- /Controllers -->
</beans>
