<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="printingModuleUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	            <prop key="module/@MODULE_ID@/printerSetup.form">printerSetup</prop>
			</props>
		</property>
	</bean>

	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.PrintingService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.impl.PrintingServiceImpl">
							<property name="printingDAO">
								<bean class="@MODULE_PACKAGE@.db.hibernate.HibernatePrintingDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<!-- Controllers -->
	
	<bean id="printerSetup" class="@MODULE_PACKAGE@.web.controller.PrinterSetupController">
		<property name="commandName"><value>services</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/printerSetup</value></property>
		<property name="successView"><value>printerSetup.form</value></property>
	</bean>
	
	<!-- /Controllers -->
	
	
</beans>
